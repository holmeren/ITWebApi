{
  "compilerOptions": {
      "module": "commonjs",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "typeRoots": ["node_module/@types"],
      "lib": ["es2015"],
      "allowJs": true
  },
  "include": [
      "**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}